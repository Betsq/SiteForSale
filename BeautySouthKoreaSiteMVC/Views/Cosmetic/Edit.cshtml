@model BeautySouthKoreaSiteMVC.Models.Cosmetic
@{ 
    ViewBag.Title = "Редактирование товара";
}

<form asp-action="edit" asp-controller="cosmetic" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название товара</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Img" class="control-label"></label>
        <input type="text" asp-for="Img" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Brand" class="control-label"></label>
        <input type="text" asp-for="Brand" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input type="number" asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea rows="6" asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="PurposeFor" class="control-label"></label>
        <select asp-for="PurposeFor" asp-items="BeautySouthKoreaSiteMVC.Util.SelectListItemHelper.GetPurposeList()" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="Means" class="control-label"></label>
        <select asp-for="Means" asp-items="BeautySouthKoreaSiteMVC.Util.SelectListItemHelper.GetMeansList()" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="Color" class="control-label"></label>
        <input type="text" asp-for="Color" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Volume" class="control-label"></label>
        <input type="number" asp-for="Volume" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CompositionGoods" class="control-label"></label>
        <input type="text" asp-for="CompositionGoods" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ShowMainScreen" class="control-label"></label>
        <input type="checkbox" asp-for="ShowMainScreen" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>