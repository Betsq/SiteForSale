@model IEnumerable<BeautySouthKoreaSiteMVC.Models.Cosmetic>
@{
    ViewBag.Title = "Все товары";
}
<a asp-action="Create">Добавить товар</a>
<table class="table">
    <tr><td>Название</td><td>Брэнд</td><td>Цена</td><td>Преназначен для</td></tr>
    @foreach (var item in Model)
    {
        <tr><td>@item.Name</td><td>@item.Brand</td><td>@item.Price</td><td>@item.PurposeFor</td>
        <td>
            <a class="text-decoration-none text-dark" asp-action="Details" asp-controller="Cosmetic" asp-route-id="@item.Id">Подробнее</a> |
            <a class="text-decoration-none text-dark" asp-action="Edit" asp-controller="Cosmetic" asp-route-id="@item.Id">Изменить</a> |
            <a class="text-decoration-none text-dark" asp-action="Delete" asp-controller="Cosmetic" asp-route-id="@item.Id">Удалить</a>
        </td>
    </tr>
    }
</table>